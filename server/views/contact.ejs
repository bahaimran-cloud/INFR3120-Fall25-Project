<% include partials/header %>
<% include partials/main_nav %>
<main class="page-shell container">
  <div class="section-heading">
    <p>Contact</p>
    <h1 class="mb-3">Reach out</h1>
    <p class="text-muted col-lg-7 px-0">Questions or ideas? Send a quick note here or email directly.</p>
  </div>

  <div class="row g-4">
    <div class="col-lg-8">
      <div class="feature-card">
        <h3 class="mb-3"><i class="fa-solid fa-envelope-open-text me-2"></i>Send a quick note</h3>
        <p class="text-muted mb-3">This form opens your email app with the details you type in.</p>
        <form action="mailto:contact@careerpointer.com?subject=Contact_from_Portfolio" enctype="text/plain" method="post" name="ContactForm">
          <div class="mb-3">
            <label class="form-label">First Name</label>
            <input type="text" name="Firstname" class="form-control" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Last Name</label>
            <input type="text" name="Lastname" class="form-control" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" name="email" class="form-control" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Cell No</label>
            <input type="tel" name="phone" pattern="[0-9]{10}" class="form-control" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Where did you find this?</label>
            <select name="where" class="form-select">
              <option value="LinkedIn">LinkedIn Page</option>
              <option value="Given">From a friend</option>
              <option value="Resume">Resume</option>
              <option value="GitHub">GitHub</option>
              <option value="Other">Other</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">What would you like help with?</label>
            <textarea name="comments" rows="5" class="form-control"></textarea>
          </div>
          <input type="submit" value="Submit" class="btn btn-primary me-2 mb-2">
          <input type="reset" value="Reset" class="btn btn-outline-light text-dark border-0 soft-btn mb-2">
        </form>
      </div>
    </div>
  </div>
  <br></br>
</main>
<% include partials/footer %>
