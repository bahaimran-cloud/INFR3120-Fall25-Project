<% include ../partials/header %>
<% include ../partials/main_nav %>
<main class="page-shell container">
  <div class="mb-4">
    <p class="mb-1">Applications</p>
    <h1 class="mb-2">Your tracker</h1>
    <% if(typeof displayName=='string' && displayName) { %>
      <a href="/applications/add" class="btn btn-primary mb-2"><i class="fas fa-plus-circle me-2"></i>Add application</a>
    <% } %>
  </div>

  <div class="card panel-card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table align-middle applications-table mb-0">
          <thead>
            <tr>
              <th>Company</th>
              <th>Position</th>
              <th>Date Applied</th>
              <th>Status</th>
              <th>Location</th>
              <th>Job Type</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (applications.length === 0) { %>
              <tr>
                <td colspan="7" class="text-center text-muted py-4">No applications yet. Start by adding your first one.</td>
              </tr>
            <% } %>
            <% for (let count=0; count<applications.length; count++) { %>
              <tr>
                <td><strong><%= applications[count].company %></strong></td>
                <td><%= applications[count].position %></td>
                <td><%= applications[count].dateApplied %></td>
                <td><%= applications[count].status %></td>
                <td><%= applications[count].location %></td>
                <td><%= applications[count].jobType %></td>
                <td class="text-end">
                  <% if(typeof displayName=='string' && displayName) { %>
                    <a href="/applications/edit/<%= applications[count]._id %>" class="btn btn-sm btn-outline-light text-dark border-0 soft-btn me-1">
                      <i class="fas fa-edit me-1"></i>Edit
                    </a>
                    <a href="/applications/delete/<%= applications[count]._id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this application?')">
                      <i class="fas fa-trash me-1"></i>Delete
                    </a>
                  <% } else { %>
                    <span class="text-muted small">Login to edit</span>
                  <% } %>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
<% include ../partials/footer %>
