<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>
<main class="page-shell container">
  <div class="row justify-content-center">
    <div class="col-lg-5">
      <div class="auth-card">
        <div class="mb-3">
          <p class="mb-1">Welcome back</p>
          <h1 class="h3 mb-0">Login to Career Pointer <i class="fa-solid fa-shield-check text-primary"></i></h1>
        </div>

        <div style="min-height: 40px;">
          <% if(message.length > 0) { %>
            <div class="alert alert-danger mb-3">
              <%= message %>
            </div>
          <% } %>
        </div>

        <!-- OAuth Buttons -->
        <div class="mb-4">
          <p class="text-muted small mb-3">Sign in with:</p>
          <div class="d-grid gap-2">
            <a href="/auth/github" class="btn btn-dark">
              <i class="fab fa-github me-2"></i>Continue with GitHub
            </a>
            <a href="/auth/google" class="btn btn-danger">
              <i class="fab fa-google me-2"></i>Continue with Google
            </a>
            <a href="/auth/discord" class="btn" style="background-color: #5865F2; color: white;">
              <i class="fab fa-discord me-2"></i>Continue with Discord
            </a>
          </div>
          
          <div class="position-relative my-4">
            <hr>
            <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted small">OR</span>
          </div>
        </div>

        <form method="post" autocomplete="off" class="form-stack">
          <div class="form-group">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" name="username" placeholder="Enter username" id="username" required autofocus>
          </div>
          <div class="form-group">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" name="password" placeholder="Enter password" id="password" required>
          </div>
          <button type="submit" class="btn btn-primary me-2 mb-2">Login</button>
          <button type="button" class="btn btn-outline-light text-dark border-0 soft-btn me-2 mb-2" onclick="location.href='/'">Cancel</button>
          <p class="text-muted">New here? <a href="/register">Register now</a></p>
        </form>
      </div>
    </div>
  </div>
</main>
<%- include ../partials/footer.ejs %>
